@model IEnumerable<MealPlanner.Data.Models.RecipeCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-sm-11">
        <h2>Recipe Categories</h2>
    </div>
    <div class="col-sm-1">
        <p style="margin-top: 21px;">
            <a asp-action="Create" class="btn btn-sm btn-success">Create <i class="glyphicon glyphicon-plus-sign"></i></a>
        </p>
    </div>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="btn-group" style="min-width: 69px; float:right;">
                    @if (item.Recipes.Count() == 0)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    }
                    else
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger disabled"><i class="glyphicon glyphicon-remove"></i></a>
                    }
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
