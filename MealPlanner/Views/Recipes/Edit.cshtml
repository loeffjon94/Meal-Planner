@model MealPlanner.Models.Entities.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LastViewed" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="RecipeImageId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategoryId" class="control-label"></label>
                <select asp-for="RecipeCategoryId" class="form-control" asp-items="ViewBag.RecipeCategories"></select>
                <span asp-validation-for="RecipeCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Recipe Image</label>
                <input type="file" id="RecipeImage" name="RecipeImage" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

