@model IEnumerable<MealPlanner.Models.Entities.Recipe>

<h1>Meal Planner</h1>
<hr />

<div id="dashboardDiv" style="height: 100%; width: 100%;"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#loading').show();
            $('#dashboardDiv').load('/Home/Dashboard', function () {
                $('#loading').hide();
            })
        })

        function showSelectMealModal(id) {
            $('#loading').show();
            $('#modalDiv').load('../Home/SelectMealPartial?id=' + id, function () {
                $('#selectMealModal').modal('show');
                $('#loading').hide();
            });
        }
    </script>
}