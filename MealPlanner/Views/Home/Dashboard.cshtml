<div id="modalDiv"></div>

<script>
    function showSelectMealModal(id) {
        $('#loading').show();
        $('#modalDiv').load('../Home/SelectMealPartial?id=' + id, function () {
            $('#selectMealModal').modal('show');
            $('#loading').hide();
        });
    }
</script>