<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meal Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/lib/hamburgers/hamburgers.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css?@DateTime.Now" />
</head>
<body>
    <div id="loading" class="centered" style="z-index: 5000; display:none;">
        <img src="~/images/loading.gif" />
    </div>
    <nav id="menu" style="display:none;">
        <section class="menu-section">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <h1>
                    Meal Planner
                </h1>
            </a>
            <hr />
            <ul class="menu-section-list">
                <li><a asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a></li>
                <li><a asp-area="" asp-controller="Ingredients" asp-action="Index">Ingredients</a></li>
                <li><a asp-area="" asp-controller="ShoppingList" asp-action="NewShoppingList">Grocery List</a></li>
                <li><a asp-area="" asp-controller="Stores" asp-action="Index">Stores</a></li>
                <li><a asp-area="" asp-controller="Units" asp-action="Index">Units</a></li>
                <li><a asp-area="" asp-controller="RecipeCategories" asp-action="Index">Recipe Categories</a></li>
            </ul>
        </section>
    </nav>
    <header class="fixed-header">
        <button class="hamburger hamburger--spin" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
    </header>
    <main id="panel">
        <div class="row">
            <div class="col-sm-12" id="bodyContent">
                @RenderBody()
            </div>
        </div>
    </main>
    <div id="modalDiv"></div>

    <script src="~/js/slideout.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="https://unpkg.com/scrollreveal@4.0.0"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>