<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meal Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/hamburgers/hamburgers.min.css?@DateTime.Now" />
    <link rel="stylesheet" href="~/css/Flatly.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css?@DateTime.Now" />
</head>
<body>
    <div id="loading" class="centered" style="z-index: 5000; display:none;">
        <img src="~/images/loading.gif" />
    </div>
    <nav id="menu" style="display:none;">
        <section class="menu-section">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <h1>
                    Meal Planner
                </h1>
            </a>
            <hr />
            <ul class="menu-section-list">
                <li><a asp-area="" asp-controller="Recipes" asp-action="Index"><i class="fas fa-list-ul"></i> Recipes</a></li>
                <li><a asp-area="" asp-controller="Ingredients" asp-action="Index"><i class="fas fa-puzzle-piece"></i> Ingredients</a></li>
                <li><a asp-area="" asp-controller="ShoppingList" asp-action="Index"><i class="fas fa-shopping-cart"></i> Grocery List</a></li>
                <li><a asp-area="" asp-controller="Stores" asp-action="Index"><i class="fas fa-store-alt"></i> Stores</a></li>
                <li><a asp-area="" asp-controller="Units" asp-action="Index"><i class="fas fa-weight"></i> Units</a></li>
                <li><a asp-area="" asp-controller="RecipeCategories" asp-action="Index"><i class="fas fa-info-circle"></i> Categories</a></li>
                <li><a asp-area="" asp-controller="MealGroups" asp-action="Index"><i class="fas fa-layer-group"></i> Meal Groups</a></li>
            </ul>
        </section>
    </nav>
    <header class="fixed-header">
        <button class="hamburger hamburger--spin" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
    </header>
    <main id="panel">
        @RenderBody()
    </main>
    <div id="modalDiv"></div>

    <script src="~/js/slideout.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.3/jquery.ui.touch-punch.min.js"></script>*@
    <script src="https://unpkg.com/scrollreveal@4.0.0"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>