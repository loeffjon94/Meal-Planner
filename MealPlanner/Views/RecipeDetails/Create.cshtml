@model MealPlanner.Models.Entities.RecipeDetail

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Recipe Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="RecipeId" hidden="hidden" />
            <div class="form-group" id="IngredientSelectContainer">
                <label asp-for="IngredientId" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="IngredientId" class ="form-control" asp-items="ViewBag.Ingredients"></select>
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-primary" onclick="ShowCreateIngredient()"><i class="fas fa-plus"></i></button>
                    </span>
                </div>
            </div>
            <div id="IngredientCreateContainer" style="display:none;">
                <div class="form-group">
                    <label asp-for="CreateIngredientName" class="control-label"></label>
                    <input asp-for="CreateIngredientName" class="form-control" id="Name" />
                    <span asp-validation-for="CreateIngredientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateIngredientStoreId" class="control-label"></label>
                    <select asp-for="CreateIngredientStoreId" class ="form-control" asp-items="ViewBag.Stores"></select>
                </div>
                <div id="ExistingIngredientCheckContainer" style="display:none;">
                    <hr />
                    <h4>Potential Existing Ingredients</h4>
                    <ul id="ExistingIngredientList"></ul>
                </div>
                <hr />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" step="any" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" class ="form-control" asp-items="ViewBag.Units"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="/js/RecipeDetailCreate.js" asp-append-version="true"></script>
    <script src="/js/IngredientCreateEdit.js" asp-append-version="true"></script>
}